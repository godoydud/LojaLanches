@using LojaLanches.Models
@model IEnumerable<LojaLanches.Models.Lanche>

<div><h2>Todos os Lanches</h2></div>

<div class="row">

    @foreach (var lanche in Model)
    {
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
                <p><img src="@lanche.ImagemUrl" class="img-rounded" /></p>
            </div>
            <div class="caption">
                <h3 class="pull-righ"> @lanche.Preco.ToString("c")</h3>
                <h3>
                    @lanche.Nome
                </h3>
                <p>@lanche.DescricaoCurta</p>
            </div>
        </div>
    }
</div>
